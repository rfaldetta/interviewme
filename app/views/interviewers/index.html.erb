<div class="page-header">
  <h1>
    Interviewers
    <a href="/interviewers/new" class="btn btn-lg btn-success">New Interviewer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @interviewers.each do |interviewer| %>
      <tr>
        <td><%= interviewer.name %></td>
        <td>
          <a href="/interviewers/<%= interviewer.id %>" class="btn btn-primary">Show</a>
          <a href="/interviewers/<%= interviewer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_interviewer/<%= interviewer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
