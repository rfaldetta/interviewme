<div class="page-header">
  <h1>
    Practice interviews
     <form action="/create_practice_interview" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Hidden input for user_id -->
      <input name="user_id" type="hidden" value="<%= current_user.id %>">

      <button class="btn btn-success">
        Create practice interview
      </button>
      </form>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date and time created</th>
        <th>Actions</th>
      </tr>

      <% @practice_interviews.each do |practice_interview| %>
      <tr>
        <td><%= practice_interview.user.email %></td>
        <td><%= practice_interview.created_at %></td>
        <td>
          <a href="/practice_interviews/<%= practice_interview.id %>/edit" class="btn btn-warning">Take the interview (again)</a>
          <a href="/practice_interviews/<%= practice_interview.id %>" class="btn btn-primary">Show your latest results</a>
          <a href="/delete_practice_interview/<%= practice_interview.id %>" class="btn btn-danger" rel="nofollow">Delete this practice interview</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
