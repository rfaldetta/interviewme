<!-- Validation failure messages -->
<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Question #<%= @question.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_question/<%= @question.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @question.user_id %>">
      </div>

      <!-- Label and input for interviewer -->
      <div class="form-group">
        <label for="interviewer" class="control-label">
          Interviewer
        </label>

        <input type="text" id="interviewer" name="interviewer" placeholder="Interviewer" class="form-control" value="<%= @question.interviewer %>">
      </div>

      <!-- Label and input for response_length_id -->
      <div class="form-group">
        <label for="response_length_id" class="control-label">
          Response length
        </label>

        <input type="text" id="response_length_id" name="response_length_id" placeholder="Response length" class="form-control" value="<%= @question.response_length_id %>">
      </div>

      <!-- Label and input for category_id -->
      <div class="form-group">
        <label for="category_id" class="control-label">
          Category
        </label>

        <input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @question.category_id %>">
      </div>

      <!-- Label and input for question -->
      <div class="form-group">
        <label for="question" class="control-label">
          Question
        </label>

        <textarea id="question" name="question" placeholder="Question" class="form-control" rows="3"><%= @question.question %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Question
      </button>
      or
      <a href="/questions/<%= @question.id %>">Cancel</a>
    </form>
  </div>
</div>
